      "MIMode": "gdb",                             
      "miDebuggerPath": "D:/software/mingw64_15.2.0/mingw64/bin/gdb.exe",  
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
    }
  ],
  "inputs": [
    {
      "id": "executableName",
      "type": "promptString",
      "description": "请输入调试的可执行文件名",
      // "default": "",
    }
  ]
}
