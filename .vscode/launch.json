  "version": "0.2.0",
  "configurations": [
    {
      // "name": "Debug C++ (GCC, CMake)",
      "name": "Debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/${input:executableName}",
      "args": [],                                  
      "stopAtEntry": false,                        
      "cwd": "${workspaceFolder}",                 
      "environment": [],
